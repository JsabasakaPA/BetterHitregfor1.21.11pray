{
  "schemaVersion": 1,
  "id": "betterhitreg",
  "version": "${version}",
  "name": "BetterHitreg",
  "description": "Clientside mod that registers hits before the server to make hitreg feel faster (use /hitreg to configure)",
  "authors": ["Jass"],
  "contact" : {
    "homepage" : "https://modrinth.com/mod/betterhitreg",
    "sources" : "https://github.com/jasspir/BetterHitreg",
    "issues" : "https://github.com/jasspir/BetterHitreg/issues"
  },
  "license": "Apache-2.0",
  "icon": "assets/betterhitreg/icon.png",
  "environment": "client",
  "entrypoints": {
    "main": [
      "you.jass.betterhitreg.BetterHitreg"
    ]
  },
  "mixins": [
    "betterhitreg.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "custom" : {
    "modmenu" : {
      "links" : {
        "modmenu.modrinth" : "https://modrinth.com/mod/betterhitreg"
      }
    }
  }
}